// packages/database/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  SUPER_ADMIN
  ADMIN
  PURCHASE
  BILLING_HEAD
  BILLING
}

enum OrderStage {
  RAW_INGESTED
  PENDING
  REP_ALLOCATION
  SLIP_GENERATED
  EXECUTED
}

enum ItemStatus {
  PENDING
  BILLED
  NOT_BILLED
  PARTIALLY_BILLED
  PRODUCT_CHANGED
  SUPPLIER_ITEM_DAMAGED
  SUPPLIER_ITEM_MISSING
}

// 1. USERS & ROLES
model User {
  id          String   @id @default(uuid())
  email       String   @unique
  name        String
  designation String?
  role        String   // SUPER_ADMIN, ADMIN, etc.
  active      Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")

  // Relations
  createdSuppliers      Supplier[]        @relation("SupplierCreator")
  createdNameChanges    ProductNameChange[]
  createdRepMasters     RepMaster[]
  uploadedFiles         PpoInputFile[]
  pendingItemsCreated   PoPendingItem[]
  repOrdersCreated      RepOrder[]
  slipsGenerated        OrderSlip[]
  statusEventsPerformed StatusEvent[]
  auditEventsPerformed  AuditEvent[]
  offlineMutations      OfflineMutation[]
  resolvedConflicts     Conflict[]
  updatedSettings       SystemSetting[]
  dutySessions          DutySession[]

  @@map("users")
}

// 2. MASTER DATA
model Supplier {
  id            String   @id @default(uuid())
  supplierCode  String?  @map("supplier_code")
  supplierName  String   @unique @map("supplier_name")
  contactPerson String?  @map("contact_person")
  mobile        String?
  email         String?
  gstNumber     String?  @map("gst_number")
  address       String?
  creditDays    Int?     @map("credit_days")
  active        Boolean  @default(true)
  
  createdBy     String?  @map("created_by")
  creator       User?    @relation("SupplierCreator", fields: [createdBy], references: [id])
  
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @default(now()) @updatedAt @map("updated_at")

  // Relations
  nameChanges         ProductNameChange[]
  pendingDecided      PoPendingItem[]
  repOrderedSupplier  RepOrder[]
  slips               OrderSlip[]

  @@map("suppliers")
}

model Product {
  id          String   @id @default(uuid())
  productCode String?  @map("product_code")
  itemName    String   @map("item_name")
  packing     String?
  category    String?
  subcategory String?
  mrp         Decimal? @db.Decimal(10, 2)
  active      Boolean  @default(true)

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")

  // Relations
  nameChanges     ProductNameChange[]
  orderRequests   OrderRequest[]
  pendingItems    PoPendingItem[]
  repOrders       RepOrder[]
  slipItems       OrderSlipItem[]

  @@map("products")
}

model ProductNameChange {
  id            String   @id @default(uuid())
  productId     String   @map("product_id")
  product       Product  @relation(fields: [productId], references: [id])
  
  supplierId    String?  @map("supplier_id")
  supplier      Supplier? @relation(fields: [supplierId], references: [id])

  oldName       String?  @map("old_name")
  newName       String   @map("new_name")
  
  reason        String?
  effectiveFrom DateTime? @map("effective_from")
  effectiveTo   DateTime? @map("effective_to")
  
  active        Boolean  @default(true)
  
  createdBy     String?  @map("created_by")
  creator       User?    @relation(fields: [createdBy], references: [id])
  
  createdAt     DateTime @default(now()) @map("created_at")

  @@map("product_name_changes")
}

model RepMaster {
  id          String   @id @default(uuid())
  name        String
  mobile      String?
  email       String?
  designation String?
  active      Boolean  @default(true)

  createdBy   String?  @map("created_by")
  creator     User?    @relation(fields: [createdBy], references: [id])

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")

  // Relations
  repOrders   RepOrder[]

  @@map("rep_master")
}

// 3. PPO INPUT
model PpoInputFile {
  id               String   @id @default(uuid())
  originalFilename String?  @map("original_filename")
  
  uploadedBy       String?  @map("uploaded_by")
  uploader         User?    @relation(fields: [uploadedBy], references: [id])
  
  uploadedAt       DateTime @default(now()) @map("uploaded_at")
  fileHash         String?  @unique @map("file_hash")
  totalRows        Int?     @map("total_rows")
  duplicateRows    Int?     @map("duplicate_rows")

  requests         OrderRequest[]

  @@map("ppo_input_files")
}

model OrderRequest {
  id                String    @id @default(uuid())
  inputFileId       String?   @map("input_file_id")
  inputFile         PpoInputFile? @relation(fields: [inputFileId], references: [id])

  acceptDate        DateTime? @map("accept_date") @db.Date
  acceptTime        DateTime? @map("accept_time") @db.Time
  
  customerId        String?   @map("customer_id")
  orderId           String?   @map("order_id")
  
  productId         String?   @map("product_id")
  product           Product?  @relation(fields: [productId], references: [id])
  
  productNameSnapshot String? @map("product_name_snapshot")
  
  reqQty            Int?      @map("req_qty")
  mrp               Decimal?  @db.Decimal(10, 2)
  
  stage             OrderStage @default(RAW_INGESTED)
  
  primarySupplier   String?   @map("primary_supplier")
  secondarySupplier String?   @map("secondary_supplier")
  
  hash              String?   @unique
  createdAt         DateTime  @default(now()) @map("created_at")

  // Relations
  pendingItem     PoPendingItem[]

  @@map("order_requests")
}

// 4. PPO PENDING
model PoPendingItem {
  id              String   @id @default(uuid())
  productId       String?  @map("product_id")
  product         Product? @relation(fields: [productId], references: [id])

  // Traceability
  orderRequestId  String?  @map("order_request_id")
  orderRequest    OrderRequest? @relation(fields: [orderRequestId], references: [id])

  totalReqQty     Int      @map("total_req_qty") // Aggregate of OrderRequests?
  
  orderedQty      Int      @default(0) @map("ordered_qty")
  stockQty        Int      @default(0) @map("stock_qty")
  offerQty        Int      @default(0) @map("offer_qty")
  
  allocatorNotes  String?  @map("allocator_notes")
  
  decidedSupplierId String? @map("decided_supplier_id")
  decidedSupplier Supplier? @relation(fields: [decidedSupplierId], references: [id])
  
  done            Boolean  @default(false)
  movedToRep      Boolean  @default(false) @map("moved_to_rep")
  
  version         Int      @default(1)
  
  createdBy       String?  @map("created_by")
  creator         User?    @relation(fields: [createdBy], references: [id])
  
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @default(now()) @updatedAt @map("updated_at")

  repOrders       RepOrder[]

  @@map("po_pending_items")
}

// 5. REP ORDERS
model RepOrder {
  id              String   @id @default(uuid())
  poPendingId     String?  @map("po_pending_id")
  poPendingItem   PoPendingItem? @relation(fields: [poPendingId], references: [id])
  
  productId       String?  @map("product_id")
  product         Product? @relation(fields: [productId], references: [id])
  
  reqQty          Int      @map("req_qty") // Reference only
  
  notes           String?
  itemNameChange  String?  @map("item_name_change")
  
  orderedSupplierId String? @map("ordered_supplier_id")
  orderedSupplier Supplier? @relation(fields: [orderedSupplierId], references: [id])
  
  repId           String?  @map("rep_id")
  rep             RepMaster? @relation(fields: [repId], references: [id])
  
  mobile          String?
  
  done            Boolean  @default(false)
  returnedToPending Boolean @default(false) @map("returned_to_pending")
  
  version         Int      @default(1)
  
  createdBy       String?  @map("created_by")
  creator         User?    @relation(fields: [createdBy], references: [id])
  
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("rep_orders")
}

// 6. ORDER SLIPS
model OrderSlip {
  id              String   @id @default(uuid())
  supplierId      String?  @map("supplier_id")
  supplier        Supplier? @relation(fields: [supplierId], references: [id])
  
  slipDate        DateTime @map("slip_date") @db.Date
  
  generatedBy     String?  @map("generated_by")
  generator       User?    @relation(fields: [generatedBy], references: [id])
  
  generatedAt     DateTime @default(now()) @map("generated_at")
  
  regeneratedFrom String?  @map("regenerated_from")
  parentSlip      OrderSlip? @relation("RegeneratedSlips", fields: [regeneratedFrom], references: [id])
  childSlips      OrderSlip[] @relation("RegeneratedSlips")

  items           OrderSlipItem[]

  @@unique([supplierId, slipDate])
  @@map("order_slips")
}

model OrderSlipItem {
  id              String   @id @default(uuid())
  orderSlipId     String?  @map("order_slip_id")
  orderSlip       OrderSlip? @relation(fields: [orderSlipId], references: [id])
  
  customerId      String?  @map("customer_id")
  orderId         String?  @map("order_id")
  
  productId       String?  @map("product_id")
  product         Product? @relation(fields: [productId], references: [id])
  
  itemNameSnapshot String? @map("item_name_snapshot")
  
  qty             Int
  remarks         String?
  
  currentStatus   String?  @map("current_status")
  version         Int      @default(1)
  
  createdAt       DateTime @default(now()) @map("created_at")

  statusEvents    StatusEvent[]

  @@map("order_slip_items")
}

// 7. DUTY SESSIONS
model DutySession {
  id          String   @id @default(uuid())
  userId      String?  @map("user_id")
  user        User?    @relation(fields: [userId], references: [id])
  
  startTime   DateTime @default(now()) @map("start_time")
  endTime     DateTime? @map("end_time")
  
  active      Boolean  @default(true)
  
  statusEvents StatusEvent[]

  @@map("duty_sessions")
}

// 8. STATUS EVENTS
model StatusEvent {
  id              String   @id @default(uuid())
  orderSlipItemId String?  @map("order_slip_item_id")
  orderSlipItem   OrderSlipItem? @relation(fields: [orderSlipItemId], references: [id])
  
  eventTime       DateTime @default(now()) @map("event_time")
  status          String
  
  orderedQty      Int?     @map("ordered_qty")
  receivedQty     Int?     @map("received_qty")
  damagedQty      Int?     @map("damaged_qty")
  missingQty      Int?     @map("missing_qty")
  pendingQty      Int?     @map("pending_qty")
  
  invoiceId       String?  @map("invoice_id")
  
  oldItemName     String?  @map("old_item_name")
  newItemName     String?  @map("new_item_name")
  
  notes           String?
  
  performedBy     String?  @map("performed_by")
  performer       User?    @relation(fields: [performedBy], references: [id])
  
  dutySessionId   String?  @map("duty_session_id")
  dutySession     DutySession? @relation(fields: [dutySessionId], references: [id])
  
  override        Boolean  @default(false)
  overrideReason  String?  @map("override_reason")

  @@map("status_events")
}

// 9. AUDIT & SYSTEMS
model AuditEvent {
  id          String   @id @default(uuid())
  entityType  String?  @map("entity_type")
  entityId    String?  @map("entity_id")
  action      String?
  beforeState Json?    @map("before_state")
  afterState  Json?    @map("after_state")
  
  performedBy String?  @map("performed_by")
  actor       User?    @relation(fields: [performedBy], references: [id])
  
  performedAt DateTime @default(now()) @map("performed_at")

  @@map("audit_events")
}

model SystemEvent {
  id        String   @id @default(uuid())
  eventType String?  @map("event_type")
  payload   Json?
  createdAt DateTime @default(now()) @map("created_at")

  @@map("system_events")
}

// 10. OFFLINE
model OfflineMutation {
  id          String   @id @default(uuid())
  userId      String?  @map("user_id")
  user        User?    @relation(fields: [userId], references: [id])
  
  entityType  String?  @map("entity_type")
  entityId    String?  @map("entity_id")
  baseVersion Int?     @map("base_version")
  payload     Json?
  
  status      String?  // PENDING, APPLIED, CONFLICT
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("offline_mutations")
}

model Conflict {
  id            String   @id @default(uuid())
  entityType    String?  @map("entity_type")
  entityId      String?  @map("entity_id")
  localPayload  Json?    @map("local_payload")
  serverPayload Json?    @map("server_payload")
  
  detectedAt    DateTime @default(now()) @map("detected_at")
  
  resolved      Boolean  @default(false)
  resolvedBy    String?  @map("resolved_by")
  resolver      User?    @relation(fields: [resolvedBy], references: [id])
  
  resolvedAt    DateTime? @map("resolved_at")
  resolution    String?  // KEEP_SYSTEM, FORCE_OVERRIDE
  resolutionReason String? @map("resolution_reason")

  @@map("conflicts")
}

// 11. SETTINGS
model SystemSetting {
  key       String   @id
  value     String?
  updatedBy String?  @map("updated_by")
  updater   User?    @relation(fields: [updatedBy], references: [id])
  
  updatedAt DateTime @default(now()) @map("updated_at")

  @@map("system_settings")
}
